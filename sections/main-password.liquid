<form method="post" action="/password" accept-charset="UTF-8">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label for="storePwd" class="col-form-label">Password</label>
        </div>
        <div class="col-auto">
            <input type="password" id="storePwd" class="form-control" aria-describedby="passwordHelpInline">
        </div>
        <div class="col-auto">
            <span id="passwordHelpInline" class="form-text">
                Must be 8-20 characters long.
            </span>
        </div>
    </div>
</form>