<div id="{{ section.settings.id }}-carousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
            aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
            aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
            aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="{{ section.settings.first_slide_image | img_url: '1024x' }}" class="d-block w-100" alt="{{}}">
            <div class="carousel-caption d-none d-md-block">
                <h5>{{ section.settings.first_slide_text }}</h5>
                <p>{{ section.settings.first_slide_text_descriptor }}</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="{{ section.settings.second_slide_image | img_url: '1024x' }}" class="d-block w-100" alt="{{}}">
            <div class="carousel-caption d-none d-md-block">
                <h5>{{ section.settings.second_slide_text }}</h5>
                <p>{{ section.settings.second_slide_text_descriptor }}</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="{{ section.settings.third_slide_image | img_url: '1024x' }}" class="d-block w-100" alt="{{}}">
            <div class="carousel-caption d-none d-md-block">
                <h5>{{ section.settings.third_slide_text }}</h5>
                <p>{{ section.settings.third_slide_text_descriptor }}</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

{% schema %}

{
    "name" : "Carousel",
    "settings" : [
        {
            "id" : "first_slide_image",
            "type" : "image_picker",
            "label" : "First Slide Image"
        },
        {
            "id" : "first_slide_text",
            "type" : "text",
            "label" : "First Slide Text",
            "default" : "First slide text"
        },
        {
            "id" : "first_slide_text_descriptor",
            "type" : "text",
            "label" : "First Slide Descriptor",
            "default" : "Some representative placeholder content."
        },
        {
            "id" : "second_slide_image",
            "type" : "image_picker",
            "label" : "Second Slide Image"
        },
        {
            "id" : "second_slide_text",
            "type" : "text",
            "label" : "Second Slide Text",
            "default" : "Second slide text"
        },
        {
            "id" : "second_slide_text_descriptor",
            "type" : "text",
            "label" : "Second Slide Descriptor",
            "default" : "Some representative placeholder content."
        },
        {
            "id" : "third_slide_image",
            "type" : "image_picker",
            "label" : "Third Slide Image"
        },
        {
            "id" : "third_slide_text",
            "type" : "text",
            "label" : "Third Slide Text",
            "default" : "Third slide text"
        },
        {
            "id" : "third_slide_text_descriptor",
            "type" : "text",
            "label" : "Third Slide Descriptor",
            "default" : "Some representative placeholder content."
        },
        {
            "id" : "id",
            "type" : "text",
            "label" : "The ID of the carousel",
            "default" : "main"
        }
    ]
}

{% endschema %}